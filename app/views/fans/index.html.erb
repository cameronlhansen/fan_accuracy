<div class="page-header">
  <h1>
    Fans
    <a href="/fans/new" class="btn btn-lg btn-success">New Fan</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Primary team</th>
        <th>Actions</th>
      </tr>

      <% @fans.each do |fan| %>
      <tr>
        <td><%= fan.email %></td>
        <td><%= fan.password %></td>
        <td>
          <% if fan.primary_team.present? %>
            <a href="/teams/<%= fan.primary_team.id %>">
              <%= fan.primary_team.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/fans/<%= fan.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @fans, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
