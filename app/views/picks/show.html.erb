<div class="page-header">
  <h3>Pick #<%= @pick.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Type</dt>
      <dd><%= @pick.type %></dd>

      <dt>Game</dt>
      <dd>
        <% if @pick.game.present? %>
          <a href="/games/<%= @pick.game_id %>">
            <%= @pick.game.home_team_id %>
          </a>
        <% end %>
      </dd>

      <dt>Fan</dt>
      <dd>
        <% if @pick.fan.present? %>
          <a href="/fans/<%= @pick.fan_id %>">
            <%= @pick.fan.email %>
          </a>
        <% end %>
      </dd>

      <dt>Over under pick</dt>
      <dd><%= @pick.over_under_pick %></dd>

      <dt>Spread pick</dt>
      <dd><%= @pick.spread_pick %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/picks" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @pick.fan %>
        <a href="/picks/<%= @pick.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_pick/<%= @pick.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
